generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================
// ENUMS
// ============================

enum Role {
  ADMIN
  STOCK
  EMPLOYEE
}

enum StockType {
  ADD
  REMOVE
  ADJUST
}

enum BudgetRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

// เดิมใช้กับ AdCampaign แต่ตอนนี้ใช้ AdPlatform แทน
enum Platform {
  FACEBOOK
  TIKTOK
  LAZADA
  SHOPEE
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
  BUDGET_APPROVED
  BUDGET_ALERT
  BUDGET_REQUEST
  LOW_STOCK
  CAMPAIGN_COMPLETE
  AI_ALERT
}

enum ProviderType {
  GEMINI
  OPENAI
  N8N
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AdPlatform {
  FACEBOOK
  GOOGLE
  TIKTOK
  LINE
}

enum ExternalPlatform {
  FACEBOOK_ADS
  TIKTOK_ADS
  LAZADA
  SHOPEE
}

// ============================
// ORGANIZATION (ใหม่)
// ============================

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users               User[]
  products            Product[]
  budgets             Budget[]
  budgetRequests      BudgetRequest[]
  adCampaigns         AdCampaign[]
  adAccounts          AdAccount[]
  aiProviders         AIProvider[]
  platformCredentials PlatformCredential[]
  customers           Customer[]
  orders              Order[]
  lineSettings        LINESettings?
}

// ============================
// USER (เพิ่ม organization)
// ============================

model User {
  id       String  @id @default(cuid())
  clerkId  String? @unique
  email    String  @unique
  password String?
  name     String?
  role     Role    @default(EMPLOYEE)

  // ✅ ผูกกับ Organization (optional เผื่อ user เก่า)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations ที่ยังผูกกับ User เหมือนเดิม
  notifications        Notification[]
  stockHistory         StockHistory[]
  automationRules      AutomationRule[]
  metricsPlans         MetricsPlan[]
  chatSessions         ChatSession[]
  aiConversations      AIConversation[]
  facebookAdInsights   FacebookAdInsight[]
  aiProductSuggestions AIProductSuggestion[]

  // BudgetRequest เป็นฝั่ง requester
  budgetRequests BudgetRequest[] @relation("BudgetRequestRequester")

  @@index([organizationId])
}

// ============================
// PRODUCT (เปลี่ยน userId -> organizationId)
// ============================

model Product {
  id            String   @id @default(cuid())
  name          String
  category      String
  quantity      Int      @default(0)
  minStockLevel Int      @default(10)
  costPrice     Float
  sellPrice     Float?   // Optional - selling price comes from LINE orders

  // NEW: Product type code for LINE integration
  productType   Int?     // 1=ครีมอาบน้ำ, 2=ยาสีฟัน, 3=..., 4=...
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // ✅ ใช้ organization แทน user
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  stockHistory  StockHistory[]
  aiSuggestions AIProductSuggestion[]

  @@index([organizationId])
  @@index([productType])
}

model StockHistory {
  id        String    @id @default(cuid())
  productId String
  type      StockType
  quantity  Int
  reason    String?
  createdAt DateTime  @default(now())
  userId    String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])
}

model Budget {
  id        String   @id @default(cuid())
  amount    Float
  purpose   String
  spent     Float    @default(0)
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  // ✅ ใช้ organization แทน user
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model BudgetRequest {
  id      String @id @default(cuid())
  amount  Float
  purpose String

  // เดิมใช้ reason ตอนนี้ใช้ description ตามโค้ดใหม่
  description String?
  status      BudgetRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  // ✅ ผูกกับ Organization
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // ✅ ผู้ขอ (requester) ผูกกับ User
  requesterId String
  requester   User   @relation("BudgetRequestRequester", fields: [requesterId], references: [id], onDelete: Cascade)

  // ฟิลด์เดิม ยังเก็บไว้
  reviewedBy String?
  reviewedAt DateTime?
  reviewNote String?

  @@index([organizationId])
  @@index([requesterId])
}

model AdCampaign {
  id           String         @id @default(cuid())
  platform     AdPlatform
  campaignName String
  budget       Float
  spent        Float          @default(0)
  reach        Int            @default(0)
  clicks       Int            @default(0)
  conversions  Int            @default(0)
  roi          Float          @default(0)
  status       CampaignStatus @default(ACTIVE)
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // ✅ เปลี่ยนจาก userId เป็น organizationId
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  adAccountId String?
  adAccount   AdAccount? @relation(fields: [adAccountId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([adAccountId])
}

model Profit {
  id        String   @id @default(cuid())
  date      DateTime @unique
  revenue   Float
  costs     Float
  netProfit Float
  createdAt DateTime @default(now())
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================
// AIProvider (เปลี่ยน userId -> organizationId)
// ============================

model AIProvider {
  id          String       @id @default(cuid())
  provider    ProviderType
  apiKey      String // Encrypted
  modelName   String?
  isActive    Boolean      @default(false)
  isDefault   Boolean      @default(false)
  isValid     Boolean      @default(false)
  lastTested  DateTime?
  testMessage String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // ✅ เปลี่ยนมาใช้ organization
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, provider])
  @@index([organizationId])
  @@index([isDefault])
}

model ChatSession {
  id        String       @id @default(cuid())
  userId    String
  title     String       @default("New Chat")
  provider  ProviderType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  role      MessageRole
  content   String      @db.Text
  metadata  Json?
  createdAt DateTime    @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model AutomationRule {
  id          String   @id @default(cuid())
  platform    String // Facebook Ads, Google Ads, TikTok Ads, X Ads, Other
  tool        String // Revealbot, AdEspresso, Madgicx, Custom (n8n webhook)
  ruleName    String
  condition   Json // { metric: "CPA", operator: ">", value: 200 }
  action      Json // { type: "pauseCampaign", value: "" }
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  adAccountId String?

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  adAccount AdAccount? @relation(fields: [adAccountId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([adAccountId])
}

model WorkflowTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  template    Json // n8n workflow JSON
  category    String // Profit, Lead Gen, E-commerce
  createdAt   DateTime @default(now())
}

model MetricsPlan {
  id           String   @id @default(cuid())
  templateName String
  targets      Json // { revenue: 100000, cac: 500, ... }
  actual       Json? // ค่าจริง (อัพเดททีหลัง)
  period       String // monthly, daily
  createdAt    DateTime @default(now())
  userId       String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================
// AdAccount (เปลี่ยน userId -> organizationId)
// ============================

model AdAccount {
  id String @id @default(cuid())

  platform    AdPlatform
  accountName String
  accountId   String

  apiKey       String?
  apiSecret    String?
  accessToken  String?
  refreshToken String?

  isActive    Boolean   @default(true)
  isDefault   Boolean   @default(false)
  isValid     Boolean   @default(false)
  lastTested  DateTime?
  testMessage String?

  currency  String   @default("THB")
  timezone  String   @default("Asia/Bangkok")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ✅ ใช้ organization แทน user
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  campaigns        AdCampaign[]
  automationRules  AutomationRule[]
  facebookInsights FacebookAdInsight[]

  @@unique([organizationId, platform, accountId])
  @@index([organizationId])
  @@index([platform, isDefault])
}

model AIConversation {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title    String @default("New Conversation")
  provider String // "GEMINI", "CHATGPT", "CLAUDE", "GROK"
  messages Json // Array of {role, content, timestamp}

  context Json? // Business context (products, campaigns, etc.)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

model FacebookAdInsight {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  adAccountId String
  adAccount   AdAccount @relation(fields: [adAccountId], references: [id], onDelete: Cascade)

  campaignId   String
  campaignName String

  // Metrics
  impressions Int   @default(0)
  clicks      Int   @default(0)
  spend       Float @default(0)
  reach       Int   @default(0)
  conversions Int   @default(0)
  ctr         Float @default(0)
  cpc         Float @default(0)
  cpm         Float @default(0)
  roas        Float @default(0)

  // AI Analysis
  aiRecommendation  String?
  optimizationScore Float?

  date      DateTime
  createdAt DateTime @default(now())

  @@unique([adAccountId, campaignId, date])
  @@index([userId])
  @@index([adAccountId])
}

model AIProductSuggestion {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  productName String
  category    String
  description String @db.Text

  aiProvider String
  confidence Float

  isApplied Boolean  @default(false)
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([userId])
}

// ============================
// PlatformCredential (เปลี่ยน userId -> organizationId)
// ============================

model PlatformCredential {
  id String @id @default(cuid())

  // ใช้ ExternalPlatform enum เดิม
  platform     ExternalPlatform
  apiKey       String?
  apiSecret    String?
  accessToken  String?
  refreshToken String?

  isValid     Boolean   @default(false)
  lastTested  DateTime?
  testMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ✅ ผูกกับ Organization
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@unique([organizationId, platform])
}

// ============================
// CUSTOMER & ORDER (ใหม่)
// ============================

model Customer {
  id             String   @id @default(cuid())
  name           String
  phone          String
  address        String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  orders         Order[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationId])
  @@index([phone])
}

model Order {
  id             String      @id @default(cuid())
  orderNumber    String?     // From LINE message (12, 13, etc)
  customerId     String
  customer       Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)

  // Product info
  productType    Int?        // 1-4 from LINE message
  productName    String?
  quantity       Int         @default(1)

  // Pricing
  amount         Float       // Total amount (ยอดเก็บ)
  unitPrice      Float       @default(0) // Price per unit from LINE message

  // Order details
  orderDate      DateTime    @default(now())
  status         OrderStatus @default(PENDING)
  notes          String?
  rawMessage     String?     // Original LINE message
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@index([organizationId])
  @@index([orderDate])
  @@index([customerId])
  @@index([productType])
  @@index([status])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

// ============================
// LINE SETTINGS
// ============================

model LINESettings {
  id                 String   @id @default(cuid())
  channelAccessToken String?
  channelSecret      String?
  webhookUrl         String?
  isActive           Boolean  @default(false)
  organizationId     String   @unique
  organization       Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
