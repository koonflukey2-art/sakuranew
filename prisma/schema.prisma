generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_DIRECT_URL")
}

// ============================
// ENUMS
// ============================

enum Role {
  ADMIN
  STOCK
  EMPLOYEE
}

enum StockType {
  ADD
  REMOVE
  ADJUST
}

enum BudgetRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

// เดิมใช้กับ AdCampaign แต่ตอนนี้ใช้ AdPlatform แทน
enum Platform {
  FACEBOOK
  TIKTOK
  LAZADA
  SHOPEE
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
  BUDGET_APPROVED
  BUDGET_ALERT
  BUDGET_REQUEST
  LOW_STOCK
  CAMPAIGN_COMPLETE
  AI_ALERT
}

enum ProviderType {
  GEMINI
  OPENAI
  N8N
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AdPlatform {
  FACEBOOK
  GOOGLE
  TIKTOK
  LINE
}

enum ExternalPlatform {
  FACEBOOK_ADS
  TIKTOK_ADS
  LAZADA
  SHOPEE
}

enum OrderStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

// ============================
// ORGANIZATION
// ============================

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users               User[]
  products            Product[]
  budgets             Budget[]
  capitalBudgets      CapitalBudget[]
  budgetRequests      BudgetRequest[]
  adCampaigns         AdCampaign[]
  adAccounts          AdAccount[]
  aiProviders         AIProvider[]
  platformCredentials PlatformCredential[]
  customers           Customer[]
  orders              Order[]
  productTypes        ProductType[]
  lineSettings        LINESettings?
  promotions          Promotion[]
}

// ============================
// USER
// ============================

model User {
  id       String  @id @default(cuid())
  clerkId  String? @unique
  email    String  @unique
  password String?
  name     String?
  role     Role    @default(EMPLOYEE)

  // ✅ ผูกกับ Organization (optional เผื่อ user เก่า)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  notifications        Notification[]
  stockHistory         StockHistory[]
  chatSessions         ChatSession[]
  aiConversations      AIConversation[]
  facebookAdInsights   FacebookAdInsight[]
  aiProductSuggestions AIProductSuggestion[]

  // BudgetRequest เป็นฝั่ง requester
  budgetRequests BudgetRequest[]  @relation("BudgetRequestRequester")
  AutomationRule AutomationRule[]
  MetricsPlan    MetricsPlan[]

  @@index([organizationId])
}

// ============================
// PRODUCT / PROMOTION / TYPE
// ============================

model Product {
  id              String   @id @default(cuid())
  name            String
  category        String?
  productType     Int
  productTypeName String?
  quantity        Int      @default(0)
  minStockLevel   Int      @default(10)
  costPrice       Float
  sellPrice       Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  stockHistory  StockHistory[]
  aiSuggestions AIProductSuggestion[]
  promotions    Promotion[]

  @@index([organizationId])
  @@index([productType])
}

model Promotion {
  id             String  @id @default(cuid())
  organizationId String
  productId      String
  product        Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  name        String
  description String?

  buyQuantity  Int
  freeQuantity Int

  startDate DateTime?
  endDate   DateTime?
  isActive  Boolean   @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([productId])
  @@index([isActive])
}

model ProductType {
  id             String   @id @default(cuid())
  organizationId String
  typeNumber     Int
  typeName       String
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, typeNumber])
  @@index([organizationId])
}

model StockHistory {
  id        String    @id @default(cuid())
  productId String
  type      StockType
  quantity  Int
  reason    String?
  createdAt DateTime  @default(now())
  userId    String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@index([productId])
  @@index([userId])
}

// ============================
// BUDGET
// ============================

model Budget {
  id        String   @id @default(cuid())
  amount    Float
  purpose   String
  spent     Float    @default(0)
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model CapitalBudget {
  id             String   @id @default(cuid())
  amount         Float
  remaining      Float
  minThreshold   Float    @default(5000)
  description    String?
  organizationId String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  createdBy      String

  organization Organization               @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  transactions CapitalBudgetTransaction[]

  @@index([organizationId])
}

model CapitalBudgetTransaction {
  id             String   @id @default(cuid())
  budgetId       String
  type           String // "ADD" | "DEDUCT"
  amount         Float
  description    String?
  productId      String?
  orderId        String?
  createdBy      String
  organizationId String
  createdAt      DateTime @default(now())

  budget CapitalBudget @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  @@index([budgetId])
  @@index([organizationId])
  @@index([createdAt])
}

model BudgetRequest {
  id      String @id @default(cuid())
  amount  Float
  purpose String

  description String?
  status      BudgetRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  requesterId String
  requester   User   @relation("BudgetRequestRequester", fields: [requesterId], references: [id], onDelete: Cascade)

  reviewedBy String?
  reviewedAt DateTime?
  reviewNote String?

  @@index([organizationId])
  @@index([requesterId])
}

// ============================
// ADS
// ============================

model AdCampaign {
  id           String         @id @default(cuid())
  platform     AdPlatform
  campaignName String
  budget       Float
  spent        Float          @default(0)
  reach        Int            @default(0)
  clicks       Int            @default(0)
  conversions  Int            @default(0)
  roi          Float          @default(0)
  status       CampaignStatus @default(ACTIVE)
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  adAccountId String?
  adAccount   AdAccount? @relation(fields: [adAccountId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([adAccountId])
}

model AdAccount {
  id String @id @default(cuid())

  platform    AdPlatform
  accountName String
  accountId   String

  apiKey       String?
  apiSecret    String?
  accessToken  String?
  refreshToken String?

  isActive    Boolean   @default(true)
  isDefault   Boolean   @default(false)
  isValid     Boolean   @default(false)
  lastTested  DateTime?
  testMessage String?

  currency  String   @default("THB")
  timezone  String   @default("Asia/Bangkok")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  campaigns        AdCampaign[]
  facebookInsights FacebookAdInsight[]
  AutomationRule   AutomationRule[]

  @@unique([organizationId, platform, accountId])
  @@index([organizationId])
  @@index([platform, isDefault])
}

model PlatformCredential {
  id String @id @default(cuid())

  platform     ExternalPlatform
  apiKey       String?
  apiSecret    String?
  accessToken  String?
  refreshToken String?

  isValid     Boolean   @default(false)
  lastTested  DateTime?
  testMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform])
  @@index([organizationId])
}

// ============================
// PROFIT / KPI
// ============================

model Profit {
  id        String   @id @default(cuid())
  date      DateTime @unique
  revenue   Float
  costs     Float
  netProfit Float
  createdAt DateTime @default(now())
}

model KPI {
  id             String   @id @default(cuid())
  organizationId String
  period         String // "daily", "weekly", "monthly"
  date           DateTime

  totalRevenue Float @default(0)
  totalCost    Float @default(0)
  totalProfit  Float @default(0)
  profitMargin Float @default(0)

  productsSold  Int   @default(0)
  avgOrderValue Float @default(0)

  stockTurnover  Float @default(0)
  costEfficiency Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId, date])
  @@index([organizationId, period])
}

model ProfitTarget {
  id             String   @id @default(cuid())
  organizationId String
  productType    Int?
  targetMargin   Float
  minMargin      Float
  alertThreshold Float
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([organizationId])
  @@index([organizationId, productType])
}

// ============================
// NOTIFICATION
// ============================

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

// ============================
// AI
// ============================

model AIProvider {
  id          String       @id @default(cuid())
  provider    ProviderType
  apiKey      String
  modelName   String?
  isActive    Boolean      @default(false)
  isDefault   Boolean      @default(false)
  isValid     Boolean      @default(false)
  lastTested  DateTime?
  testMessage String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, provider])
  @@index([organizationId])
  @@index([isDefault])
}

model ChatSession {
  id        String       @id @default(cuid())
  userId    String
  title     String       @default("New Chat")
  provider  ProviderType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@index([userId])
  @@index([updatedAt])
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  role      MessageRole
  content   String      @db.Text
  metadata  Json?
  createdAt DateTime    @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([createdAt])
}

// ✅ (แก้ P1012) AutomationRule
model AutomationRule {
  id        String   @id @default(cuid())
  platform  String
  tool      String
  ruleName  String
  condition Json
  action    Json
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId      String
  adAccountId String?

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  adAccount AdAccount? @relation(fields: [adAccountId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([adAccountId])
}

model WorkflowTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  template    Json
  category    String
  createdAt   DateTime @default(now())
}

// ✅ (แก้ P1012) MetricsPlan
model MetricsPlan {
  id           String   @id @default(cuid())
  templateName String
  targets      Json
  actual       Json?
  period       String
  createdAt    DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AIConversation {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  title    String @default("New Conversation")
  provider String
  messages Json
  context  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

model FacebookAdInsight {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  adAccountId String
  adAccount   AdAccount @relation(fields: [adAccountId], references: [id], onDelete: Cascade)

  campaignId   String
  campaignName String

  impressions Int   @default(0)
  clicks      Int   @default(0)
  spend       Float @default(0)
  reach       Int   @default(0)
  conversions Int   @default(0)
  ctr         Float @default(0)
  cpc         Float @default(0)
  cpm         Float @default(0)
  roas        Float @default(0)

  aiRecommendation  String?
  optimizationScore Float?

  date      DateTime
  createdAt DateTime @default(now())

  @@unique([adAccountId, campaignId, date])
  @@index([userId])
  @@index([adAccountId])
}

model AIProductSuggestion {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  productName String
  category    String
  description String @db.Text

  aiProvider String
  confidence Float
  isApplied  Boolean @default(false)

  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([userId])
}

// ============================
// CUSTOMER & ORDER
// ============================

model Customer {
  id             String       @id @default(cuid())
  name           String
  phone          String
  address        String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  orders         Order[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([phone])
}

model Order {
  id          String   @id @default(cuid())
  orderNumber String?
  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  productType Int?
  productName String?
  quantity    Int     @default(1)

  amount    Float
  unitPrice Float @default(0)

  orderDate      DateTime     @default(now())
  status         OrderStatus  @default(PENDING)
  notes          String?
  rawMessage     String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([orderDate])
  @@index([customerId])
  @@index([productType])
  @@index([status])
}

// ============================
// LINE SETTINGS
// ============================

model LINESettings {
  id                 String       @id @default(cuid())
  channelAccessToken String?
  channelSecret      String?
  webhookUrl         String?
  isActive           Boolean      @default(false)
  organizationId     String       @unique
  organization       Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
}

// ============================
// DAILY SUMMARY
// ============================

model DailySummary {
  id             String   @id @default(cuid())
  date           DateTime // Start of day
  organizationId String

  totalRevenue Float @default(0)
  totalCost    Float @default(0)
  totalProfit  Float @default(0)
  totalOrders  Int   @default(0)

  productsSold Json // [{productType, productName, quantity, revenue, cost, profit}]

  createdAt  DateTime @default(now())
  cutOffTime DateTime
  @@unique([organizationId, date]) // ✅ เพิ่มอันนี้
  @@index([organizationId, date])
  @@index([date])
}

// ============================
// SYSTEM SETTINGS
// ============================

model SystemSettings {
  id             String @id @default(cuid())
  organizationId String @unique

  dailyCutOffHour   Int @default(23)
  dailyCutOffMinute Int @default(59)

  dailySummaryLastSentAt DateTime?
  
  lineNotifyToken        String?
  lineChannelAccessToken String?
  lineChannelSecret      String?
  lineWebhookUrl         String?
  lineTargetId String? // ✅ เพิ่มบรรทัดนี้

  adminEmails String?

  notifyOnOrder      Boolean @default(true)
  notifyOnLowStock   Boolean @default(true)
  notifyDailySummary Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId])
}
