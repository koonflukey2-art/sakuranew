generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  clerkId   String?   @unique
  email     String    @unique
  password  String?
  name      String?
  role      Role      @default(EMPLOYEE)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Organization relationship
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  // Personal data (NOT shared between users)
  notifications Notification[]
  stockHistory  StockHistory[]
  chatSessions  ChatSession[]

  @@index([organizationId])
}

enum Role {
  ADMIN
  STOCK
  EMPLOYEE
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  logo        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users                User[]
  products             Product[]
  budgets              Budget[]
  budgetRequests       BudgetRequest[]
  adCampaigns          AdCampaign[]
  adAccounts           AdAccount[]
  aiProviders          AIProvider[]
  platformCredentials  PlatformCredential[]
  automationRules      AutomationRule[]
  metricsPlans         MetricsPlan[]
  aiConversations      AIConversation[]
  facebookAdInsights   FacebookAdInsight[]
  aiProductSuggestions AIProductSuggestion[]
}

model Product {
  id            String   @id @default(cuid())
  name          String
  category      String
  quantity      Int      @default(0)
  minStockLevel Int      @default(10)
  costPrice     Float
  sellPrice     Float
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  stockHistory  StockHistory[]
  aiSuggestions AIProductSuggestion[]

  @@index([organizationId])
}

model StockHistory {
  id        String    @id @default(cuid())
  productId String
  type      StockType
  quantity  Int
  reason    String?
  createdAt DateTime  @default(now())
  userId    String

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])
}

enum StockType {
  ADD
  REMOVE
  ADJUST
}

model Budget {
  id        String   @id @default(cuid())
  amount    Float
  purpose   String
  spent     Float    @default(0)
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model BudgetRequest {
  id          String              @id @default(cuid())
  amount      Float
  purpose     String
  reason      String
  status      BudgetRequestStatus @default(PENDING)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  requesterId String // Who made the request
  reviewedBy  String?
  reviewedAt  DateTime?
  reviewNote  String?

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([requesterId])
}

enum BudgetRequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model AdCampaign {
  id           String         @id @default(cuid())
  platform     Platform
  campaignName String
  budget       Float
  spent        Float          @default(0)
  reach        Int            @default(0)
  clicks       Int            @default(0)
  conversions  Int            @default(0)
  roi          Float          @default(0)
  status       CampaignStatus @default(ACTIVE)
  startDate    DateTime
  endDate      DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  adAccountId  String?

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  adAccount AdAccount? @relation(fields: [adAccountId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([adAccountId])
}

enum Platform {
  FACEBOOK
  TIKTOK
  LAZADA
  SHOPEE
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

model Profit {
  id        String   @id @default(cuid())
  date      DateTime @unique
  revenue   Float
  costs     Float
  netProfit Float
  createdAt DateTime @default(now())
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  message   String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  ERROR
  BUDGET_APPROVED
  BUDGET_ALERT
  BUDGET_REQUEST
  LOW_STOCK
  CAMPAIGN_COMPLETE
  AI_ALERT
}

model AIProvider {
  id          String       @id @default(cuid())
  provider    ProviderType
  apiKey      String // Encrypted
  modelName   String?
  isActive    Boolean      @default(false)
  isDefault   Boolean      @default(false)
  isValid     Boolean      @default(false)
  lastTested  DateTime?
  testMessage String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, provider])
  @@index([organizationId])
  @@index([isDefault])
}

model ChatSession {
  id        String       @id @default(cuid())
  userId    String
  title     String       @default("New Chat")
  provider  ProviderType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String
  role      MessageRole
  content   String      @db.Text
  metadata  Json?
  createdAt DateTime    @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

enum ProviderType {
  GEMINI
  OPENAI
  N8N
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

model AutomationRule {
  id          String   @id @default(cuid())
  platform    String // Facebook Ads, Google Ads, TikTok Ads, X Ads, Other
  tool        String // Revealbot, AdEspresso, Madgicx, Custom (n8n webhook)
  ruleName    String
  condition   Json // { metric: "CPA", operator: ">", value: 200 }
  action      Json // { type: "pauseCampaign", value: "" }
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  adAccountId String?

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  adAccount AdAccount? @relation(fields: [adAccountId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([adAccountId])
}

model WorkflowTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  template    Json // n8n workflow JSON
  category    String // Profit, Lead Gen, E-commerce
  createdAt   DateTime @default(now())
}

model MetricsPlan {
  id           String   @id @default(cuid())
  templateName String
  targets      Json // { revenue: 100000, cac: 500, ... }
  actual       Json? // ค่าจริง (อัพเดททีหลัง)
  period       String // monthly, daily
  createdAt    DateTime @default(now())

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

enum AdPlatform {
  FACEBOOK
  GOOGLE
  TIKTOK
  LINE
}

enum ExternalPlatform {
  FACEBOOK_ADS
  TIKTOK_ADS
  LAZADA
  SHOPEE
}

model AdAccount {
  id           String     @id @default(cuid())
  platform     AdPlatform
  accountName  String
  accountId    String
  apiKey       String
  apiSecret    String?
  accessToken  String?
  refreshToken String?

  isActive  Boolean @default(true)
  isDefault Boolean @default(false)
  isValid   Boolean @default(false)

  lastTested  DateTime?
  testMessage String?

  currency String @default("THB")
  timezone String @default("Asia/Bangkok")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  campaigns        AdCampaign[]
  automationRules  AutomationRule[]
  facebookInsights FacebookAdInsight[]

  @@unique([organizationId, platform, accountId])
  @@index([organizationId])
  @@index([platform, isDefault])
}

model AIConversation {
  id        String   @id @default(cuid())
  title     String   @default("New Conversation")
  provider  String // "GEMINI", "CHATGPT", "CLAUDE", "GROK"
  messages  Json // Array of {role, content, timestamp}
  context   Json? // Business context (products, campaigns, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([createdAt])
}

model FacebookAdInsight {
  id          String    @id @default(cuid())
  adAccountId String
  adAccount   AdAccount @relation(fields: [adAccountId], references: [id], onDelete: Cascade)

  campaignId   String
  campaignName String

  // Metrics
  impressions Int   @default(0)
  clicks      Int   @default(0)
  spend       Float @default(0)
  reach       Int   @default(0)
  conversions Int   @default(0)
  ctr         Float @default(0)
  cpc         Float @default(0)
  cpm         Float @default(0)
  roas        Float @default(0)

  // AI Analysis
  aiRecommendation  String?
  optimizationScore Float?

  date      DateTime
  createdAt DateTime @default(now())

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([adAccountId, campaignId, date])
  @@index([organizationId])
  @@index([adAccountId])
}

model AIProductSuggestion {
  id          String @id @default(cuid())
  productName String
  category    String
  description String @db.Text

  aiProvider String
  confidence Float

  isApplied Boolean  @default(false)
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
}

model PlatformCredential {
  id           String  @id @default(cuid())
  platform     String // ExternalPlatform or "LINE_NOTIFY"
  apiKey       String?
  apiSecret    String?
  accessToken  String?
  refreshToken String?

  isValid     Boolean   @default(false)
  lastTested  DateTime?
  testMessage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Organization relationship (shared data)
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, platform])
  @@index([organizationId])
}
